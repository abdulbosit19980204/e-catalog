# ===================================
# E-Catalog Environment Configuration
# ===================================

# Django Core Settings
# --------------------
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# ----------------------
# For SQLite (Development)
DB_ENGINE=sqlite3
DB_NAME=db.sqlite3

# For PostgreSQL (Production - Recommended)
# DB_ENGINE=postgresql
# DB_NAME=ecatalog
# DB_USER=postgres
# DB_PASSWORD=your_secure_password_here
# DB_HOST=localhost
# DB_PORT=5432

# Redis Configuration
# -------------------
REDIS_URL=redis://localhost:6379/0
USE_LOCAL_CACHE=False

# API Keys
# --------
YANDEX_MAPS_KEY=your_yandex_maps_api_key_here

# CORS Settings
# -------------
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Media & Static Files
# --------------------
MEDIA_ROOT=/path/to/media
STATIC_ROOT=/path/to/static

# Email Configuration (Optional)
# -------------------------------
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# JWT Token Settings
# ------------------
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7

# File Upload Settings
# --------------------
MAX_UPLOAD_SIZE_MB=10

# Logging
# -------
LOG_LEVEL=INFO

# Performance & Optimization
# --------------------------
# Database connection pooling
DB_CONN_MAX_AGE=600

# Redis cache timeout (seconds)
CACHE_TIMEOUT=3600

# API Rate Limiting
# -----------------
# THROTTLE_RATE_ANON=100/hour
# THROTTLE_RATE_USER=1000/hour

# Security (Production Only)
# --------------------------
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# Visit Management Settings
# --------------------------
# Auto-generate visits from plans
VISIT_AUTO_GENERATE=True
VISIT_GENERATE_DAYS_AHEAD=7

# Image storage
VISIT_IMAGE_STORAGE=local  # or 's3', 'azure'
VISIT_IMAGE_MAX_SIZE_MB=5
